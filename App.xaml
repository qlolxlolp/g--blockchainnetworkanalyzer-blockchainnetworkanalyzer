<Application x:Class="BlockchainNetworkAnalyzer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Basic Styles -->
            <Style x:Key="ModernButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#6200EA"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="20,10"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

            <!-- Compatibility resource keys - Must be defined BEFORE use -->
            <SolidColorBrush x:Key="MaterialDesignPaper" Color="#121212"/>
            <SolidColorBrush x:Key="MaterialDesignBody" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="MaterialDesignBodyLight" Color="#B0B0B0"/>
            <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#6200EA"/>
            <SolidColorBrush x:Key="MaterialDesignDivider" Color="#424242"/>
            
            <!-- Card Style (replacement for materialDesign:Card) -->
            <Style x:Key="CardStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource MaterialDesignPaper}"/>
                <Setter Property="BorderBrush" Value="{StaticResource MaterialDesignDivider}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="4"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Margin" Value="0,0,0,20"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="8" Opacity="0.1" ShadowDepth="2"/>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- TabControl Style -->
            <Style x:Key="MaterialDesignFilledTabControl" TargetType="TabControl">
                <Setter Property="Background" Value="{StaticResource MaterialDesignPaper}"/>
                <Setter Property="Foreground" Value="{StaticResource MaterialDesignBody}"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>
            
            <Style x:Key="MaterialDesignRaisedButton" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}" />
            <Style x:Key="MaterialDesignOutlinedButton" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderBrush" Value="#FFFFFF" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Foreground" Value="White" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>

