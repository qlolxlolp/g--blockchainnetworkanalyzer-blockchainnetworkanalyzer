<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============= FONT FAMILIES ============= -->
    
    <!-- فونت‌های پارسی - Persian Fonts -->
    <FontFamily x:Key="VazirFont">pack://application:,,,/Resources/Fonts/#Vazir</FontFamily>
    <FontFamily x:Key="IRANSansFont">pack://application:,,,/Resources/Fonts/#IRANSans</FontFamily>
    
    <!-- Default Font Family (Will use Persian font if available, otherwise fallback) -->
    <FontFamily x:Key="DefaultFontFamily">
        Vazir,IRANSans,Segoe UI,Arial,sans-serif
    </FontFamily>

    <!-- ============= FONT STYLES ============= -->
    
    <!-- Heading 1 - Title -->
    <Style x:Key="H1_TextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- Heading 2 - Section Title -->
    <Style x:Key="H2_TextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- Heading 3 - Subsection Title -->
    <Style x:Key="H3_TextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- Body Text - Regular Text -->
    <Style x:Key="BodyTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>

    <!-- Caption - Small Text -->
    <Style x:Key="CaptionTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
    </Style>

    <!-- Button Text -->
    <Style x:Key="ButtonTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
    </Style>

    <!-- ============= CONTROL STYLES WITH PERSIAN FONT ============= -->

    <!-- TextBox with Persian Font Support -->
    <Style x:Key="PersianTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="0,4,0,4"/>
    </Style>

    <!-- Button with Persian Font Support -->
    <Style x:Key="PersianButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="MinHeight" Value="40"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- ComboBox with Persian Font Support -->
    <Style x:Key="PersianComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="0,4,0,4"/>
    </Style>

    <!-- Label with Persian Font Support -->
    <Style x:Key="PersianLabelStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        <Setter Property="Padding" Value="0,8"/>
    </Style>

    <!-- ============= LAYOUT HELPERS ============= -->
    
    <!-- Right-to-Left Layout for Persian -->
    <FlowDirection x:Key="PersianFlowDirection">RightToLeft</FlowDirection>
    <TextAlignment x:Key="PersianTextAlignment">Right</TextAlignment>

    <!-- Left-to-Right Layout for English -->
    <FlowDirection x:Key="EnglishFlowDirection">LeftToRight</FlowDirection>
    <TextAlignment x:Key="EnglishTextAlignment">Left</TextAlignment>

</ResourceDictionary>
