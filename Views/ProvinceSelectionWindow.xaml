<Window x:Class="BlockchainNetworkAnalyzer.Views.ProvinceSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="انتخاب استان و شهر / Province and City Selection" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                  Text="انتخاب استان و شهر ایران / Select Iranian Province and City" 
                  FontSize="18" 
                  FontWeight="Bold" 
                  Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="استان / Province" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <ListBox x:Name="ProvinceListBox" 
                        SelectionChanged="ProvinceListBox_SelectionChanged"
                        Height="400"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="شهر / City" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <ListBox x:Name="CityListBox" 
                        SelectionMode="Extended"
                        Height="400"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox Grid.Column="0" 
                     x:Name="FetchIPRangesCheck" 
                     Content="دریافت خودکار محدوده IP از اینترنت / Auto-fetch IP ranges from internet" 
                     IsChecked="True"
                     VerticalAlignment="Center"/>

            <Button Grid.Column="1" 
                   Content="دریافت IP Ranges / Fetch IP Ranges" 
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   Margin="10,0"
                   Click="FetchIPRangesBtn_Click"/>

            <Button Grid.Column="2" 
                   Content="تایید / Confirm" 
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   Click="ConfirmBtn_Click"/>
        </Grid>
    </Grid>
</Window>

