<Window x:Class="BlockchainNetworkAnalyzer.Views.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Console / Terminal" 
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <materialDesign:ColorZone Grid.Row="0" 
                                  materialDesign:ColorZoneAssist.Mode="PrimaryMid"
                                  Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          Text="Integrated Console / Terminal" 
                          Foreground="White" 
                          FontSize="16" 
                          VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="StartConsoleBtn" 
                           Content="Start Console" 
                           Click="StartConsoleBtn_Click"
                           Margin="5,0"/>
                    <Button x:Name="ClearConsoleBtn" 
                           Content="Clear" 
                           Click="ClearConsoleBtn_Click"
                           Margin="5,0"/>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <ScrollViewer Grid.Row="1" 
          x:Name="ConsoleScrollViewer"
            VerticalScrollBarVisibility="Auto"
   HorizontalScrollBarVisibility="Auto">
     <TextBox x:Name="ConsoleOutput" 
    IsReadOnly="True" 
    FontFamily="Consolas" 
   FontSize="12"
            Background="Black"
      Foreground="LimeGreen"
        TextWrapping="Wrap"
           VerticalScrollBarVisibility="Auto"
         HorizontalScrollBarVisibility="Auto"/>
   </ScrollViewer>

        <Grid Grid.Row="2" 
              Background="{DynamicResource MaterialDesignPaper}"
              Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" 
                    x:Name="CommandInput" 
                    materialDesign:HintAssist.Hint="Enter command..."
                    KeyDown="CommandInput_KeyDown"
                    Margin="10,10,10,10"/>

            <Button Grid.Column="1" 
                   Content="Send" 
                   Click="SendCommandBtn_Click"
       Margin="10,10,10,10"/>
        </Grid>
    </Grid>
</Window>

