{
  "Database": {
    "ConnectionString": "Data Source=iranian_miner_detector.db;Version=3;",
    "BackupIntervalDays": 7
  },
  "Network": {
    "DefaultTimeoutMs": 3000,
    "MaxConcurrency": 100,
    "PingTimeoutMs": 2000,
    "TcpTimeoutMs": 3000
  },
  "MiningPorts": {
    "Bitcoin": [8332, 8333, 3333],
    "Ethereum": [30303, 8545],
    "Litecoin": [9332, 9333],
    "Monero": [18081],
    "Stratum": [3333, 4028, 4444, 5050, 8888]
  },
  "Geolocation": {
    "ApiUrl": "http://ip-api.com/json/{0}",
    "CacheDurationHours": 24,
    "RateLimitDelayMs": 1000
  },
  "Reporting": {
    "OutputDirectory": "Reports",
    "TimestampFormat": "yyyyMMdd_HHmmss",
    "DefaultFormat": "PDF",
    "IncludeCharts": true
  },
  "Map": {
    "DefaultCenterLatitude": 32.4279,
    "DefaultCenterLongitude": 53.6880,
    "DefaultZoom": 5,
    "EnableClustering": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "System": "Warning",
      "Microsoft": "Warning"
    }
  }
}
